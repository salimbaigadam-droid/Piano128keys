FROM rust:1.75-slim

WORKDIR /app

# Install PostgreSQL development libraries
RUN apt-get update && apt-get install -y \
    libpq-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Copy Cargo files
COPY Cargo.toml .

# Create src directory and copy source
RUN mkdir src
COPY rust_backend.rs src/main.rs

# Build the application (this caches dependencies)
RUN cargo build --release

# Expose port
EXPOSE 8003

# Run the application
CMD ["./target/release/piano-rust-backend"]
